<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.marvin_elsen.gbo.gui.plusminus.PlusMinusController">
    <children>
        <Button fx:id="plus" onAction="#buttonPlusClick" text="+"
                GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label fx:id="counterL" text="0" GridPane.columnIndex="1"
               GridPane.rowIndex="2"/>
        <Button fx:id="minus" onAction="#buttonMinusClick" text="-"
                GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </children>
</GridPane>